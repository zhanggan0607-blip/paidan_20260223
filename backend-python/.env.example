# SSTCP Maintenance System Backend - Python Environment Configuration
# 复制此文件为 .env 并填入实际的配置值

# Database Configuration
# 格式: postgresql://用户名:密码@主机:端口/数据库名
# 格式: mysql+pymysql://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/tq

# Application Configuration
APP_NAME=SSTCP Maintenance System
APP_VERSION=1.0.0
DEBUG=True

# API Configuration
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# CORS Configuration
# 允许的前端地址，多个地址用逗号分隔
CORS_ORIGINS=http://localhost:3000,http://localhost:4173,http://localhost:5173

# Pagination Configuration
PAGE_SIZE=10
MAX_PAGE_SIZE=100
